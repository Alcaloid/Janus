<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="20dp"
        >

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/txt_username"
                    android:text="Username"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            <LinearLayout
                    android:id="@+id/linear_need_approve_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/txt_username"
                    android:layout_marginHorizontal="40dp"
                    >

                <TextView
                        android:id="@+id/txt_need_approve_income"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Income"
                        />

                <TextView
                        android:id="@+id/txt_need_approve_job"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Job"
                        />

                <TextView
                        android:id="@+id/txt_need_approve_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Company"
                        />
            </LinearLayout>

            <Button
                    android:id="@+id/btn_approve"
                    android:text="Approve"
                    android:textColor="@color/colorPurple"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/linear_need_approve_information"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/corner_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>