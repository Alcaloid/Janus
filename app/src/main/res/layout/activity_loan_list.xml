<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.LoanListActivity">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorApp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:tint="#FFFFFF"
                    tools:visibility="visible"
                    android:id="@+id/btn_image_backToLoan"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textSize="18sp"
                    android:text="Loan List"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    />

            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:src="@drawable/scb_logo"
                    />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
            android:id="@+id/amountSearchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AMOUNT"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

            <EditText
                    android:id="@+id/minAmount"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_marginRight="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="-"/>

            <EditText
                    android:id="@+id/maxAmount"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/searchbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textColor="@color/colorApp"
                    android:text="SEARCH"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/laonListView"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="LISTS"/>

        <View
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorGray"
                android:layout_width="280dp"
                android:layout_height="1dp"/>

        <androidx.recyclerview.widget.RecyclerView
                tools:listitem="@layout/loan_list_card"
                android:id="@+id/rvLoanListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>