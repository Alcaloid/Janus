<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPurple"
            >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/scb_logo"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lending"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#EDE7F6"
            android:layout_weight="0.55"
            >
        <TextView
                android:id="@+id/txt_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
        <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Lending"
                android:layout_marginLeft="10dp"
                />
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlack"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="50dp"
                />
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                >
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_myLending"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>
            <ImageView
                    android:id="@+id/image_notLending"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/lend"
                    android:tint="#C9C9C9"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_notLending"
                    android:layout_centerHorizontal="true"
                    android:text="No Lending"
                    android:textColor="#C9C9C9"
                    />
        </RelativeLayout>
    <Button
            android:id="@+id/btn_addLending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Lending"
            android:background="@drawable/corner_button"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="10dp"
            />

</LinearLayout>