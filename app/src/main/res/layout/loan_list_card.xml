<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:background="@drawable/corner_border"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

            <TextView
                    android:id="@+id/limitLoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="Limit:  100,000à¸¿"/>

            <TextView
                    android:id="@+id/interestLoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Interest:  3%"/>

            <TextView
                    android:id="@+id/periodLoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Period:  3 month"/>

            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/lonerName"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waramporm Yangkijkarn"/>

                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                <TextView
                        android:id="@+id/detailLoan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="detail >"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>